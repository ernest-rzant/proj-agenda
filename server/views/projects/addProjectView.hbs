<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    <div class="card">
      <div class="card-image">
        <img src="/images/image.jpg" alt="blue print image" />
        <span class="card-title">
          Registrar Actividad
        </span>
      </div>
      <form autocomplete="off" action="/projects/add" method="POST">
        <div class="card-content">
          <div class="input-field">
            <label for="activity-fecha">
              Fecha
            </label>
            <input 
            placeholder="Ingrese fecha de actividad"
            type="text" 
            id="activity-fecha"
            name="fecha"
            value="{{project.fecha}}"
            class="datepicker"
            >
            <span class="helper-text" 
            data-error="Debe ingresar una fecha"
            data-success="Correcto"></span>
            {{#if errorModel.fechaError}}
            <span style="color: red;">Error: {{errorModel.fechaError}}</span>
            {{/if}}
          </div>
          <div class="input-field">
            <label for="activity-name">
              Nombre
            </label>
            <input
              placeholder="Ingrese el nombre de la actividad"
              type="text"
              id="activity-name"
              name="name"
              class="validate"
              value="{{project.name}}"
              required
            />
            <span class="helper-text" 
            data-error="Debe ingresar el nombre de la actividad"
            data-success="Correcto"></span>
            {{#if errorModel.nameError}}
            <span style="color: red;">Error: {{errorModel.nameError}}</span>
            {{/if}}
          </div>
          <div class="input-field">
            <label for="activity-description">
              Descripci√≥n
            </label>
            <textarea
              name="description"
              id="activity-description"
              class="materialize-textarea"
              required
            >{{project.description}}</textarea>
            <span class="helper-text" 
            data-error="Debe ingresar descripcion de la actividad"
            data-success="Correcto"></span>
            {{#if errorModel.descriptionError}}
            <span style="color: red;">Error: {{errorModel.descriptionError}}</span>
            {{/if}}
          </div>
        </div>
        <div class="card-action">
          <button
            type="submit"
            class="blue darken-3 waves-effect waves-light btn">
            <i class="material-icons left">
              save
            </i>
            Registrar Actividad
          </button>
        </div>
      </form>
    </div>
  </div>
</div>